vrrp_script chk_haproxy {
    script "killall -0 haproxy"
    interval 2
    weight 2
}

vrrp_instance VI_1 {
    interface {{ haproxy_interface }}
    state MASTER
    virtual_router_id 51
    priority 101

    virtual_ipaddress {
        {{ haproxy_vip }}
    }

    track_script {
        chk_haproxy
    }
}
